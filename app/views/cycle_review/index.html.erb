

<%= form_tag("update_cycle_review", :enctype =>"multipart/form-data") do %>
   
<% cname = Cycle.all %>
<div class="card">
  <div class="card-header">
    <h4> Update Cycle Review Sheet</h4>
  </div>  
<div class="card-body">  
<div class="row ml-1">
    <div class="field">
     <%= label_tag :cycle %>
     <%= select_tag "cycle", options_from_collection_for_select(cname, "cycle_name", "cycle_name")  %>
  
   </div>
</div>
<div class="row ml-1">
    <div class="field">
     <%= label_tag :review_type %>
     <%= select_tag "review_type", options_for_select([['Mid Cycle', 1], ['End of Cycle', 2]]) %>
  
   </div>
</div>
</div>
   <div class="card-footer">
   
   <div class="actions">
      <%= submit_tag 'Next' %>
   </div>
 
  
</div>
</div>
<% end %>

