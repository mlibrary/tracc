<ul class="navbar-nav">

  <li class="nav-item"><%#= link_to "Cards", {  :controller => "cards", :action => "index" }, class: 'nav-link' %>
  </li>

  <% access_level = check_current_access %>
  <% action_count = 0 %>
  
  <%= render_nav_actions do |config, action|%>
    <% action_count += 1 %>
    <%# Everyone can see the tools menu %>
    <% if action_count == 1 %>
      <li class="lead"><%= action %></li>
    <% elsif access_level >= 2 %>
      <li class="lead"><%= action %></li>
    <% end %>
  <% end %>

  <% if has_user_authentication_provider? %>
    <% if current_user %>
    <li class="lead">
      <%= link_to t('blacklight.header_links.logout'), destroy_user_session_path, class: 'nav-link' %>
    </li>
    <% unless current_user.to_s.blank? -%>
    <li class="lead">
      <%= link_to current_user, edit_user_registration_path, class: 'nav-link' %>
    </li>
    <% end %>
    <% else %>
    <li class="lead">
      <%= link_to t('blacklight.header_links.login'), new_user_session_path, class: 'nav-link' %>
    </li>
    <% end %>
  <% end %>
</ul>

