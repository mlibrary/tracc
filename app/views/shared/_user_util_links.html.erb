<ul class="navbar-nav">

  <li class="nav-item"><%#= link_to "Cards", {  :controller => "cards", :action => "index" }, class: 'nav-link' %>
  </li>

  <%
    # access levels - See wiki https://github.com/mlibrary/tracc/wiki/Permissions
    # 0=super user
    # 1=Cycle Planning Coordinator and the team Admin
    # 2=LIT Coordinating Group User
    # 3=LIT Project/Teach Leads Guest
    # 9=view options only

    # menu numbers
    # 1=Tools
    # 2=Import
    # 3=Update
    # 4=Reports
  %>

  <% access_level = check_current_access %>
  <% menu_count = 0 %>
  
  <%= render_nav_actions do |config, action|%>
    <% menu_count += 1 %>
    <% if menu_count == 1 %>
      <li class="lead"><%= action %></li>
    <% elsif (menu_count == 2 && (access_level == 0 || access_level == 1)) %>
      <li class="lead"><%= action %></li>
    <% elsif (menu_count == 3 && access_level.zero?) %>
      <li class="lead"><%= action %></li>
    <% elsif (menu_count == 4 && access_level <= 9) %>
      <li class="lead"><%= action %></li>
    <% end %>
  <% end %>

  <% if has_user_authentication_provider? %>
    <% if current_user %>
    <li class="lead">
      <%= link_to t('blacklight.header_links.logout'), destroy_user_session_path, class: 'nav-link' %>
    </li>
    <% unless current_user.to_s.blank? -%>
    <li class="lead">
      <%= link_to current_user, edit_user_registration_path, class: 'nav-link' %>
    </li>
    <% end %>
    <% else %>
    <li class="lead">
      <%= link_to t('blacklight.header_links.login'), new_user_session_path, class: 'nav-link' %>
    </li>
    <% end %>
  <% end %>
</ul>

