           fte = (chip.chips/4.00)
         else
           fte = 0 
         end   
         uniqname_str = chip.uniqname + j.to_s %>
      <%= chip.uniqname %>: <%= fte %> FTE <br> <%= text_field_tag uniqname_str, value=chip.chips, :size=>"5"%> chips
      </p> 
    
     
     <% 
